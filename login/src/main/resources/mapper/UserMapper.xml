<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mb.msgboards.mapper.UserMapper">
    <select id="findByUsername" resultType="com.mb.msgboards.model.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    <select id="findByEmail" resultType="com.mb.msgboards.model.User">
        SELECT * FROM user WHERE email = #{email}
    </select>
    <insert id="insert" parameterType="com.mb.msgboards.model.User">
        INSERT INTO user (username, gender, birthday, hobbit, password, email, phone, avatar, created_time, updated_time)
        VALUES (#{username}, #{gender}, #{birthday}, #{hobbit}, #{password}, #{email}, #{phone}, #{avatar}, #{createdTime}, #{updatedTime})
    </insert>
    <select id="findByUserId" resultType="com.mb.msgboards.model.User">
        SELECT * FROM user WHERE id = #{userId}
    </select>
</mapper> 